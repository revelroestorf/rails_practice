<p id="notice"><%= notice %></p>

<h1>User Cart</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Product</th>
      <th>Qty</th>
      <th></th>
      <th>Price</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.user_id %></td>
        <td><%= Product.find(cart.product_id).description %></td>
        <td><%= cart.qty %></td>
        <td><%= link_to 'update', edit_cart_path(cart) %></td>
        <td><%= number_to_currency(Product.find(cart.product_id).price) %></td>

        <td><%= link_to 'remove', cart, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Back to users', admin_users_path %>
