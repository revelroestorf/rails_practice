<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>email</th>
      <th>Admin Access</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= user.active %></td>

        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Delete', admin_user_path(user), method: :delete %></td>
        <td><%= link_to('View cart', {controller: 'admin_users', action: 'carts', id: user}) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
