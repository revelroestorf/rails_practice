
<% @page_title = 'All Admin Users' %>

<%= link_to('<< Back to menu', admin_path, :class => 'back-link') %>

<div class="admin_users index">
  <h2>Admin Users</h2>

  <%= link_to('Add New Admin User', new_admin_user_path, class: 'action new') %>

<div><%= pluralize(@admin_users.size, 'admin user') %> found</div>

  <table class="listing" summary="Admin_users list">
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @admin_users.each do |au| %>
    <tr>
      <td><%= au.username %></td>
      <td><%= au.name %></td>
      <td><%= mail_to(au.email) %></td>

      <td class="actions">
        <%= link_to("Edit", edit_admin_user_path(au), :class => 'action edit') %>
        <%= link_to("Delete", delete_admin_user_path(au), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
