<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @contact.name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @contact.phone %>
</p>

<p>
  <strong>Address:</strong>
  <%= @contact.full_address %>
</p>

<p>
  <iframe
    width="600"
    height="450"
    frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDL_JdDPBZF-cZliiJ14Nw0LrVdFSjxhJ8 &q=<%=@contact.full_address %>" allowfullscreen>
  </iframe>
</p>

<p>
  <iframe
    width="600"
    height="450"
    frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/streetview?key=AIzaSyDL_JdDPBZF-cZliiJ14Nw0LrVdFSjxhJ8
    &location=<%= @contact.latitude %>,<%= @contact.longitude %>
    &heading=210
    &pitch=10
    &fov=35" allowfullscreen>

  </iframe>
</p>


<%= link_to 'Edit', edit_contact_path(@contact) %> |
<%= link_to 'Back', contacts_path %>
